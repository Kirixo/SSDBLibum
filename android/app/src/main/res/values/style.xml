<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">62dp</item>
        <item name="android:height">36dp</item>
        <item name="android:color">@color/gray_blue_200</item>
        <item name="android:translationY">28dp</item>
        <item name="shapeAppearance">@style/App.Custom.IndicatorShape</item>
    </style>

    <style name="App.Custom.IndicatorShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">22dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="roundedImageViewRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageView.BookView" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:backgroundTint">@color/blue_500</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.Libum"/>

    <style name="Button.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Button.Transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.Libum.LargeTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Libum.CatalogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Libum.CatalogMainTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Libum.MediumTitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Libum.SmallTitle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Libum.Body">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Libum.BodySecondary">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Libum.Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    
</resources>
